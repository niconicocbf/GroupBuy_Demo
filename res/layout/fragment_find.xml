<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffefefef" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff3f3f3" >

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/main_exit" />

        <LinearLayout
            android:id="@+id/title_pad_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品牌"
                android:textSize="18dp" />

            <TextView
                android:layout_width="6dp"
                android:layout_height="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/trangle_down" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#ffa4a9b1" />
    </RelativeLayout>

    <ListView
        android:id="@+id/find_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:divider="@null" >
    </ListView>

    <LinearLayout
        android:id="@+id/title_pad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:background="#88000000"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0fcfbf9"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/order_title_content1"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/order_title_dot1"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/main_dot1" />

                <TextView
                    android:id="@+id/order_title_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="品牌"
                    android:textColor="#ffea5900" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ffcecece" />

            <LinearLayout
                android:id="@+id/order_title_content2"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/order_title_dot2"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/main_dot2" />

                <TextView
                    android:id="@+id/order_title_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="推荐"
                    android:textColor="#ff6e6e6e" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ffcecece" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>